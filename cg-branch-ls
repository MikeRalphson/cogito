#!/usr/bin/env bash
#
# List configured GIT branches.
# Copyright (c) Steven Cole 2005
#
# Takes no parameters.

. cg-Xlib

mkdir -p .git/branches
[ "$(find .git/branches -follow -type f)" ] \
	|| die "List of branches is empty. See cg-branch-add."

cd .git/branches
for branch in *; do
	echo -n $branch
	echo -ne "\t"
	cat $branch
done
